<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.ListView?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.concurrente.server.server.ServerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Servidor Iniciado"/>
    <HBox spacing="150.0" alignment="CENTER">
        <Label text="IP:" fx:id="ipLabel" />
        <Label fx:id="portLabel"/>
    </HBox>
    <AnchorPane>
        <ListView fx:id="eventListView" prefWidth="300" prefHeight="150" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
    </AnchorPane>


    <Button text="Cerrar Servidor" onAction="#stopServer"/>
</VBox>
